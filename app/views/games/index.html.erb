<p id="notice"><%= notice %></p>

<header class="container-fluid">
  <h1>Games</h1>
  <p class=botongame><button type="button" class="btn btn-light"><%= link_to 'New Game', new_game_path %></button></p>

</header>

<nav>

</nav>

  <div class="container-fluid">
    <table class="table table-dark table-striped-columns">
      <thead>
        <tr>
          <th>Name</th>
          <th>Image</th>
          <th>Summary</th>
          <th>Release date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.name %></td>
            <td><%= image_tag game.photo if game.photo.attached? %></td>
            <td><%= game.summary %></td>
            <td><%= game.release_date %></td>
            <td class="bi bi-eye"><%= link_to 'Show', game %></td>
            <td class="bi bi-pencil"><%= link_to 'Edit', edit_game_path(game) %></td>
            <td class="bi bi-trash"><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<br>
